model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model User {
  id    String  @id
  email String
  owner Owner[]
}

model Repository {
  url            String  @id @unique
  owners         Owner[]
  numberOfShares Int
}

model Owner {
  id            String      @id @unique @db.Uuid
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  Repository    Repository? @relation(fields: [repositoryUrl], references: [url])
  repositoryUrl String
  holdings      Int
}
